CompileFlags:
  CompilationDatabase: build/
  Add: [-Wall, -std=c++20, -I/opt/ros/humble/include]

Index:
  Background: Build

Diagnostics:
  ClangTidy:
    Add: [performance-*, readability-*, modernize-*]
    Remove: [readability-braces-around-statements, readability-magic-numbers, modernize-use-trailing-return-type, modernize-use-nodiscard]
    CheckOptions:
      readability-function-cognitive-complexity.Threshold: 500
  UnusedIncludes: Strict

Completion:
  AllScopes: Yes

InlayHints:
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes

Hover:
  ShowAKA: Yes 